<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.accounttracker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.example.accounttracker.AccountTracker"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name" >
        <activity
            android:name="com.example.accounttracker.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.accounttracker.AddAccountActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.accounttracker.AddTransActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.accounttracker.RecentTransActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.accounttracker.ContactUsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.accounttracker.EditAccountActivity"
            android:label="@string/app_name" >
        </activity>        
    </application>

</manifest>
